{
    "compilerOptions": {
        "target": "ES2015",
        "lib": [
            "ESNext", "DOM"
        ],
        "module": "commonjs", 
        "esModuleInterop": true, 
        "forceConsistentCasingInFileNames": true,
        "strict": true, 
        "skipLibCheck": true,

        "declaration": true,
        "declarationMap": true,
        "declarationDir": "lib",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "lib"
    }
}